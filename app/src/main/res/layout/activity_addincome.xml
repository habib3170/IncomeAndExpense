<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="#414141"
    tools:context=".AddincomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Income :"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/incomeAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd"
                android:drawableLeft="@drawable/plussymbol"
                android:hint="Enter Your Income Amount"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category :"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/incomeCatagory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18dp"
                android:background="#fff"
                android:textColor="#000000"
                android:hint="Enter Your Catagory"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/incomeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:hint="Enter Your Income Description"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/incomeDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:hint="Enter Date"
                android:inputType="date"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/saveIncomeBtn"
                android:onClick="saveIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:background="#212121"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:dividerHeight="1dp"
        android:divider="#fff"
        android:id="@+id/incomeLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>